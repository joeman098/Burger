<ul>
  {{#each burgerOrm}}
   {{#unless devoured}}
  	<li>
      <p><span class="label">Burger:</span> {{this.burger_name}}</p>

      <button data-id="{{this.id}}" class="Eat">Eat</button>

  	</li>
    {{/unless}}
  {{/each}}
</ul>
