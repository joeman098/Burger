<div class="container-fluid">
<h1>Burger tracker</h1>
<h2>track burgers you have eaten and still need to eat!</h2>
<div class="row">
 <div class="col-lg-6 card">
   <div class="card-header">
    Burgers that need to be eaten
  </div>
<ul>
  {{#each burgerOrm}}
   {{#unless devoured}}
  	<li>
      <p><span class="label">Burger:</span> {{this.burger_name}}  <button class="Eat btn btn-danger" data-id="{{this.id}}">Eat</button></p>

     

  	</li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-lg-6 card">
  <div class="card-header">
    Burgers that have been DEVOURED
  </div>
<ul>
  {{#each burgerOrm}}
   {{#if devoured}}
  	<li>
      <p><span class="label">Burger:</span> {{this.burger_name}}</p>



  	</li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgername">Burger Name</label>
    <input type="text" id="burgername" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Did you eat this burger already?</label><br>
    <input type="radio" name="devoured" value="1" > Yea duh!<br>
    <input type="radio" name="devoured" value="0" checked> Nope!
  </div>

  <button type="submit">Add</button>
</form>
</div>